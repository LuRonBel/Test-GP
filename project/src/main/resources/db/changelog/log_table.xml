<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="patskevich" id="3.1">
        <createTable tableName="LOG">
            <column name="ID" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="LOGIN" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="OLD_NICKNAME" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="NEW_NICKNAME" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="DATE" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="patskevich" id="3.2">
        <addPrimaryKey columnNames="ID" constraintName="id_PK" tableName="LOG"/>
        <addAutoIncrement columnDataType="int"
                          columnName="ID"
                          incrementBy="1"
                          startWith="1"
                          tableName="LOG"/>
    </changeSet>
</databaseChangeLog>